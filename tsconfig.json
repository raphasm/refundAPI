{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],

    "paths": {
      "@/*": ["./src/*"]
    },

     "module": "es2022",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  }
}